{
  "name": "tardis",
  "version": "1.0.0",
  "description": "Modernized TARDIS project using Dart Sass",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zkm/TARDIS.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "npm run build-css && vite build",
    "preview": "vite preview",
    "build-css": "sass sass/style.scss css/style.css --no-source-map",
    "watch:css": "sass sass/style.scss css/style.css --no-source-map --watch",
    "clean": "rm -rf dist css/style.css",
    "lint": "npm run lint:scss",
    "lint:scss": "stylelint 'sass/**/*.scss'",
    "lint:scss:fix": "stylelint 'sass/**/*.scss' --fix",
    "format": "prettier --write 'sass/**/*.scss'",
    "format:check": "prettier --check 'sass/**/*.scss'",
    "test": "stylelint 'sass/**/*.scss' --max-warnings 0 && sass sass/style.scss css/style.css --no-source-map",
    "test:ci": "npm run format:check && npm run test"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "stylelint": "^17.2.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-prettier": "^5.0.3",
    "vite": "^7.3.1"
  }
}
